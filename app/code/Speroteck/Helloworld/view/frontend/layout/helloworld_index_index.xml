<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<head>
    <title>
        Speroteck M2 Hello World
    </title>
</head>
<body>
    <referenceContainer name="content">
        <block class="Speroteck\Helloworld\Block\Helloworld" before="-" cacheable="false" template="Speroteck_Helloworld::helloworld.phtml">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="helloworld" xsi:type="array">
                            <item name="component" xsi:type="string">Speroteck_Helloworld/js/view/helloworld</item>
                            <item name="config" xsi:type="array">
                                <item name="template" xsi:type="string">Speroteck_Helloworld/helloworld</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </block>
    </referenceContainer>
</body>
</page>